<div class="row">
  {{#each books}}
    <div class="col-sm-4 mb-4">
      <div class="card">
        <img class="card-img-top" src="{{ cover }}" alt="Card image">
        <div class="card-body">
          <h4 class="card-title">{{ name }}</h4>
          <p class="card-text">{{ text }}</p>
        </div>
      </div>
    </div>
  {{/each}}
</div>