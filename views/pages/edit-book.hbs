<div class="row justify-content-center">
  <div class="col-sm-6">
    <div id='editBookAlert' class="alert alert-success d-none"></div>

    <h2 class='mb-4'>Edit book</h2>

    <form id='editBookForm' data-book-id='{{ book._id }}'>
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" value='{{ book.name }}'>
      </div>
      <div class="form-group">
        <label for="cover">Link to cover:</label>
        <input type="text" class="form-control" id="cover" value='{{ book.cover }}'>
      </div>
      <div class="form-group">
        <label for="description">Description:</label>
        <textarea class="form-control" rows="5" id="description">{{ book.description }}</textarea>
      </div>
      <button id='editBookBtn' type="submit" class="btn btn-primary">
        <span class="spinner-border spinner-border-sm d-none"></span>
        Edit book
      </button>
    </form>
  </div>
</div>
